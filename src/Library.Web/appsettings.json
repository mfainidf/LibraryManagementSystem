{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/web-api-.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Properties": {
      "Application": "LibraryManagementSystem.Web"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=library.db"
  },
  "Jwt": {
    "Key": "LibraryManagementSystem-JWT-Secret-Key-Must-Be-At-Least-32-Characters-Long",
    "Issuer": "LibraryManagementSystem",
    "Audience": "LibraryManagementSystem"
  },
  "AllowedHosts": "*"
}
